<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/myOrderBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myOrderItemImg"
                android:padding="5dp"
                android:layout_width="96dp"
                android:layout_height="96dp" />

            <TextView
                android:id="@+id/myOrderItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/myOrderItemImg"
                android:hint="Product Name"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/dark" />


            <TextView
                android:id="@+id/myOrderItemPrice"
                android:layout_width="179dp"
                android:layout_height="27dp"
                android:layout_below="@id/myOrderItemName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@id/myOrderItemImg"
                android:hint="Product Price"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="14sp" />


                <TextView
                android:id="@+id/myOrderItemQuant"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myOrderItemName"
                android:layout_alignEnd="@+id/myOrderItemPrice"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:layout_toEndOf="@+id/myOrderItemImg"
                android:hint="Count"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>