<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/cartBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cartImg"
                android:padding="5dp"
                android:layout_width="96dp"
                android:layout_height="96dp" />

            <TextView
                android:id="@+id/cartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/cartImg"
                android:hint="Product Name"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/dark" />


            <TextView
                android:id="@+id/cartPrice"
                android:layout_width="179dp"
                android:layout_height="27dp"
                android:layout_below="@id/cartName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@id/cartImg"
                android:hint="Product Price"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/cartQuant"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartName"
                android:layout_alignEnd="@+id/cartPrice"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:layout_toEndOf="@+id/cartImg"
                android:hint="Count"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cartDelete"
                android:text="delete"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>